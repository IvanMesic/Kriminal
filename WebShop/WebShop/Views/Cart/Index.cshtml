@model DAL.Model.Cart

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            color: #FFFFFF;
            background-color: #121212;
        }

        h1, h2, h3 {
            font-family: 'Merriweather', serif;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

            .table thead {
                background-color: #1E1E1E;
            }

            .table th, .table td {
                padding: 12px;
                text-align: left;
                border-bottom: 1px solid #333;
                color: #FFEB3B; /* Yellow text */
            }

            .table th {
                color: #FFA726;
            }

            .table tbody tr {
                background-color: #1E1E1E;
                transition: background-color 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #333;
                }

        .btn {
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            margin-right: 5px;
            border: none;
        }

        .btn-danger {
            background: linear-gradient(#FF5733, #C70039);
            color: white;
        }

            .btn-danger:hover {
                background: linear-gradient(#C70039, #FF5733);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-warning {
            background: linear-gradient(#FFC107, #FF9800);
            color: white;
        }

            .btn-warning:hover {
                background: linear-gradient(#FF9800, #FFC107);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-success {
            background: linear-gradient(#4CAF50, #388E3C);
            color: white;
        }

            .btn-success:hover {
                background: linear-gradient(#388E3C, #4CAF50);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body>
    <h1>Shopping Cart</h1>

    @if (Model.Items.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Total.ToString("C")</td>
                        <td>
                            <form asp-action="Remove" method="post" style="display:inline;">
                                <input type="hidden" name="itemId" value="@item.ItemId" />
                                <input type="submit" value="Remove" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h3>Total: @Model.Total().ToString("C")</h3>

        <form asp-action="Clear" method="post">
            <input type="submit" value="Clear Cart" class="btn btn-warning" />
        </form>

        <form asp-action="CommitTransaction" method="post" style="margin-top: 10px;">
            <input type="submit" value="Purchase Items" class="btn btn-success" />
        </form>
    }
</body>
</html>
