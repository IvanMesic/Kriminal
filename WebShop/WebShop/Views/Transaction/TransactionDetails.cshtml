@model DAL.Model.Transaction

@{
    ViewData["Title"] = "Transaction Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Transaction Details</h1>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        @foreach (var transactionItem in Model.TransactionItems)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(_ => transactionItem.Item.Title)  
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(_ => transactionItem.Item.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(_ => transactionItem.Item.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(_ => transactionItem.Item.Price)
            </dd>
        }
    </dl>
</div>
