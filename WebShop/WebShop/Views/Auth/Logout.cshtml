@{
    ViewData["Title"] = "Logout Confirmation";
}

<h2>Logout</h2>
<p>Are you sure you want to log out?</p>

<form asp-action="LogoutConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Yes, log out</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>
