@{
    ViewData["Title"] = "Logout Confirmation";
}

<h2>Logout</h2>
<p>Are you sure you want to log out?</p>

<form asp-action="LogoutConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Yes, Log out</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
</form>

<style>
    body {
        font-family: 'Open Sans', sans-serif;
        color: #FFFFFF;
        background-color: #121212;
        background-image: url('https://www.toptal.com/designers/subtlepatterns/uploads/5-dots.png');
        background-size: auto;
        background-repeat: repeat;
        background-attachment: fixed;
        padding: 20px;
        margin: 0;
        overflow-x: hidden;
    }

    h2 {
        color: #FF9800; /* Match the orange color used for labels */
        text-align: center;
    }

    p {
        text-align: center;
        color: #FF9800;
    }

    .btn-danger {
        background-color: #FF5722;
        border-color: #FF5722;
        color: #FFFFFF;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        margin: 0 5px;
    }

        .btn-danger:hover {
            background-color: #FF7043; /* Lighter red on hover */
            border-color: #FF7043;
        }

    .btn-secondary {
        background-color: #2c2c2c;
        border-color: #FF9800;
        color: #FF9800;
        padding: 10px 20px;
        border-radius: 4px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
        margin: 0 5px;
    }

        .btn-secondary:hover {
            background-color: #454545;
            border-color: #FFA726;
        }

    form {
        text-align: center;
    }
</style>
