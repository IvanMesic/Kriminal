@model List<DAL.Model.Item>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            color: #FFFFFF;
            background-color: #121212;
        }

        h1, h2, h3 {
            font-family: 'Merriweather', serif;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .card {
            background-color: #1E1E1E;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 350px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

            .card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-bottom: 3px solid #FFA726;
                transition: border-bottom 0.3s ease;
            }

                .card img:hover {
                    border-bottom: 3px solid #FF9800;
                }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.4em;
            margin-bottom: 5px;
            color: #FFFFFF;
        }

        .card-subtitle {
            font-size: 1em;
            color: #AAAAAA;
            margin-bottom: 10px;
        }

        .card-text {
            color: #CCCCCC;
            margin-bottom: 15px;
        }

        .btn-primary {
            background: linear-gradient(#FFA726, #FF9800);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            margin-right: 5px;
        }

            .btn-primary:hover {
                background: linear-gradient(#FF9800, #FFA726);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-secondary {
            background: linear-gradient(#4E4E4E, #3C3C3C);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
            margin-right: 5px;
        }

            .btn-secondary:hover {
                background: linear-gradient(#3C3C3C, #4E4E4E);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .btn-danger {
            background: linear-gradient(#FF5733, #C70039);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            .btn-danger:hover {
                background: linear-gradient(#C70039, #FF5733);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }
    </style>
</head>
<body>
    <div class="card-container">
        @foreach (var item in Model)
        {
            <div class="card">
                <img src="@item.ImagePath" alt="@item.Title">
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                    <h4 class="card-subtitle">@Html.DisplayFor(modelItem => item.Artist.Name)</h4>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Edit", "Edit", new { id = item.ItemId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", new { id = item.ItemId }, new { @class = "btn btn-secondary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ItemId }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
    </div>

    <div style="text-align:center; margin-top: 20px;">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>
</body>
</html>
