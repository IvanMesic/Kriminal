@model WebShop.Model.ItemFilterViewModel

<form asp-action="Index" asp-controller="Item" method="get">
    <div class="form-group">
        <label for="searchQuery">Search</label>
        <input type="text" name="SearchQuery" class="form-control" value="@Model.SearchQuery" />
    </div>
    <div class="form-group">
        <label for="priceMin">Minimum Price</label>
        <input type="number" name="PriceMin" class="form-control" value="@Model.PriceMin" />
    </div>
    <div class="form-group">
        <label for="priceMax">Maximum Price</label>
        <input type="number" name="PriceMax" class="form-control" value="@Model.PriceMax" />
    </div>
    <div class="form-group">
        <label for="categories">Categories</label>
        <select asp-for="SelectedCategories" asp-items="Model.Categories" class="form-control" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <label for="artists">Artists</label>
        <select asp-for="SelectedArtists" asp-items="Model.Artists" class="form-control" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <label for="tags">Tags</label>
        <select asp-for="SelectedTags" asp-items="Model.Tags" class="form-control" multiple="multiple"></select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>
