@model WebShop.Model.ItemListViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Item List</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            color: #FFFFFF;
            background-color: #121212;
        }

        h1, h2, h3 {
            font-family: 'Merriweather', serif;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .card {
            background-color: #1E1E1E;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 350px;
            transition: transform 0.3s ease;
            position: relative;
        }

            .card:hover {
                transform: translateY(-5px);
            }

            .card img {
                width: 100%;
                height: 250px;
                object-fit: cover;
                border-bottom: 3px solid #FFA726;
                transition: border-bottom 0.3s ease;
            }

                .card img:hover {
                    border-bottom: 3px solid #FF9800;
                }

            .card .sold-overlay, .card .sale-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 2em;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .card.sold .sold-overlay, .card.sale .sale-overlay {
                opacity: 1;
            }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 1.4em;
            margin-bottom: 5px;
            color: #FFFFFF;
        }

        .card-subtitle {
            font-size: 1em;
            color: #AAAAAA;
            margin-bottom: 10px;
        }

        .card-text {
            color: #CCCCCC;
            margin-bottom: 15px;
        }

        .btn-primary {
            background: linear-gradient(#FFA726, #FF9800);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-block;
            text-align: center;
            text-decoration: none;
        }

            .btn-primary:hover {
                background: linear-gradient(#FF9800, #FFA726);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

            .btn-primary:disabled {
                background: #AAA;
                cursor: not-allowed;
            }

        .quantity-input {
            display: none; /* Hide the quantity input */
        }

            .quantity-input:focus {
                border-color: #FFA726;
                outline: none;
                box-shadow: 0 0 8px rgba(255, 152, 0, 0.2);
            }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

            .pagination .page-link {
                color: #FFA726;
                background-color: transparent;
                border: none;
                transition: all 0.3s ease;
            }

            .pagination .page-item.active .page-link {
                background-color: #FFA726;
                color: white;
            }

            .pagination .page-link:hover {
                background-color: #DDDDDD;
                color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="card-container">
        @foreach (var item in Model.items)
        {
            var saleMultiplier = item.SaleMultiplier ?? 1;
            var isSale = saleMultiplier < 1;
            <div class="card @(item.Sold ? "sold" : (isSale ? "sale" : ""))">
                <a href="@Url.Action("ItemDetails", "Shop", new { id = item.ItemId })">
                    <img src="@item.ImagePath" alt="@item.Title">
                    @if (item.Sold)
                    {
                        <div class="sold-overlay">Sold!</div>
                    }
                    else if (isSale)
                    {
                        <div class="sale-overlay">Sale!</div>
                    }
                </a>
                <div class="card-body">
                    <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                    <h4 class="card-subtitle">@Html.DisplayFor(modelItem => item.Artist.Name)</h4>
                    <p class="card-text">Price: @string.Format("{0:n0} $", item.Price * saleMultiplier)</p>
                    <form asp-action="AddToCart" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.ItemId" />
                        <input type="hidden" name="quantity" value="1" /> 
                        <input type="submit" value="Add to Cart" class="btn btn-primary" @(item.Sold ? "disabled" : "") /> 
                    </form>
                </div>
            </div>
        }
    </div>

    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if ((int)Model.pageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.pageNumber - 1))">Previous</a>
                </li>
            }
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == Model.pageNumber ? "active" : "")">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(i))">@i</a>
                </li>
            }
            @if ((int)Model.pageNumber < (int)ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(Model.pageNumber + 1))">Next</a>
                </li>
            }
        </ul>
    </nav>
</body>
</html>
