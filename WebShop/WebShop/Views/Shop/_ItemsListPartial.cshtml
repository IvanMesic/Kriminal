@model WebShop.Model.ItemListViewModel

<div id="item-list">
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.items.First().Title)</th>
                <th>@Html.DisplayNameFor(model => model.items.First().Price)</th>
                <th>@Html.DisplayNameFor(model => model.items.First().CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.items.First().ImagePath)</th>
                <th>Category</th>
                <th>Artist</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.items)
            {
                <tr style="max-width: 70px; word-wrap: break-word" >
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.ImagePath)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Artist.Name)</td>
                    <td>
                    <form asp-action="AddToCart" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.ItemId" />
                        <input type="number" name="quantity" value="1" min="1" style="width: 50px;" />
                        <input type="submit" value="Add to Cart" class="btn btn-primary" />
                    </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @if ((int)ViewBag.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(ViewBag.CurrentPage - 1))">Previous</a>
            </li>
        }
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(i))">@i</a>
            </li>
        }
        @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="javascript:void(0)" onclick="loadPage(@(ViewBag.CurrentPage + 1))">Next</a>
            </li>
        }
    </ul>
</nav>
